{
  "name": "biomesaw-scaffold",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/hardhat",
      "packages/nextjs"
    ]
  },
  "scripts": {
    "account": "yarn workspace @biomesaw-scaffold/hardhat account",
    "chain": "yarn workspace @biomesaw-scaffold/hardhat chain",
    "fork": "yarn workspace @biomesaw-scaffold/hardhat fork",
    "deploy": "yarn workspace @biomesaw-scaffold/hardhat deploy",
    "verify": "yarn workspace @biomesaw-scaffold/hardhat verify",
    "hardhat-verify": "yarn workspace @biomesaw-scaffold/hardhat hardhat-verify",
    "compile": "yarn workspace @biomesaw-scaffold/hardhat compile",
    "generate": "yarn workspace @biomesaw-scaffold/hardhat generate",
    "flatten": "yarn workspace @biomesaw-scaffold/hardhat flatten",
    "hardhat:lint": "yarn workspace @biomesaw-scaffold/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @biomesaw-scaffold/hardhat lint-staged",
    "hardhat:format": "yarn workspace @biomesaw-scaffold/hardhat format",
    "hardhat:test": "yarn workspace @biomesaw-scaffold/hardhat test",
    "test": "yarn hardhat:test",
    "format": "yarn next:format && yarn hardhat:format",
    "start": "yarn workspace @biomesaw-scaffold/nextjs dev",
    "next:lint": "yarn workspace @biomesaw-scaffold/nextjs lint",
    "next:format": "yarn workspace @biomesaw-scaffold/nextjs format",
    "next:check-types": "yarn workspace @biomesaw-scaffold/nextjs check-types",
    "next:build": "yarn workspace @biomesaw-scaffold/nextjs build",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "yarn workspace @biomesaw-scaffold/nextjs vercel",
    "vercel:yolo": "yarn workspace @biomesaw-scaffold/nextjs vercel:yolo"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier-plugin-solidity": "1.1.3"
  }
}
